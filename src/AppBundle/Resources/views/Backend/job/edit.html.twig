{% extends '@Layouts/backendFrame.html.twig' %}
{% block page_header %}
    <h1>招聘管理<small>编辑</small></h1>

{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-10">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">编辑招聘</h3>
                </div>
                <form class="form-horizontal" id="job-form" name="job-form" method="post" enctype="multipart/form-data" action="{{ path('bapi_put_job',{id: job.id}) }}">
                    <input name="_method" value="PUT" type="hidden">
                    <div class="box-body">

                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">标题</label>
                            <div class="col-sm-9">
                                <input type="text" value="{{ job.title }}" name="title" class="form-control" id="title" placeholder="标题">
                                <span class="help-block title-msg"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="introduce" class="col-sm-2 control-label">介绍</label>
                            <div class="col-sm-9">
                                <textarea name="introduce" id="introduce" class="form-control">{{ job.introduce }}</textarea>
                                <span class="help-block introduce-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="content" class="col-sm-2 control-label">内容</label>
                            <div class="col-sm-9">
                                <textarea name="content" id="content">{{ job.content }}</textarea>
                                <span class="help-block content-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="flow" class="col-sm-2 control-label">浏览量</label>
                            <div class="col-sm-3">
                                <input type="number" name="flow" value="{{ job.flow }}" class="form-control" id="flow" placeholder="浏览量" >
                                <span class="help-block flow-msg"></span>
                            </div>

                        </div>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button id="save" type="submit" class="btn btn-info">保存</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script type="text/javascript" src="{{ asset('plugins/ckeditor/ckeditor.js','frontend') }}"></script>
    <script type="text/javascript" src="{{ asset('plugins/jquery.form.js','frontend') }}"></script>
    <script type="text/javascript">
        CKEDITOR.replace('content');
        $(document).ready(function(){
            $('#save').on('click',function () {
                $('#job-form').ajaxForm({
                    type:'POST',
                    statusCode:{
                        204:function (res) {
                            var index=layer.msg('修改成功');
                            setTimeout("location.href='{{ path('b_job_list') }}'",1000)
                        },
                        400:function (res) {
                            var msg = res.responseJSON.message
                            if((typeof msg)==='string'){
                                layer.msg(msg)
                            }else {
                                for(var i in msg){
                                    layer.msg(msg[i])
                                    return
                                }
                            }
                        },
                        401:function () {
                            layer.msg('会话已过期，需要重登录！')
                        },
                        500:function () {
                            layer.msg('服务器出错了')
                        }
                    }
                })
            })
        });
    </script>
{% endblock %}
