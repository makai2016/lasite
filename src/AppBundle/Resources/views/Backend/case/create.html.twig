{% extends '@Layouts/backendFrame.html.twig' %}
{% block page_header %}
    <h1>案例管理<small>创建</small></h1>

{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-10">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">添加案例</h3>
                </div>
                <form class="form-horizontal" id="case-form" name="case-form" method="post" enctype="multipart/form-data" action="{{ path('bapi_post_case') }}">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="category_id" class="col-md-2 control-label">分类</label>
                            <div class="col-md-4">
                                <select class="form-control" name="category_id" id="category_id" onchange="setSecond($(this).val())">
                                    <option value="0">请选择</option>
                                    {% for item in categorys %}
                                    <option value="{{ item.id }}">{{ item.name }}</option>
                                    {% endfor %}
                                </select>
                                <span class="help-block categoryId-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="second_id" class="col-md-2 control-label">第二分类</label>
                            <div class="col-md-4">
                                <select class="form-control" name="second_id" id="second_id">
                                    <option value="0">请选择</option>
                                </select>
                                <span class="help-block secondId-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">标题</label>
                            <div class="col-sm-9">
                                <input type="text" name="title" class="form-control" id="title" placeholder="标题">
                                <span class="help-block title-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="introduce" class="col-sm-2 control-label">介绍</label>
                            <div class="col-sm-9">
                                <textarea name="introduce" id="introduce" class="form-control"></textarea>
                                <span class="help-block introduce-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="thumbnail" class="col-sm-2 control-label">缩略图</label>
                            <div class="col-sm-3">
                                <input type="text" name="thumbnail" value="" class="form-control" id="thumbnail" placeholder="粘贴图片地址或下方上传文件">
                                <input type="file" name="image" id="image">
                                {#<input type="hidden" name="thumbnail" id="thumbnail">#}
                                <span class="help-block thumbnail-msg">比例：300×176</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="banner_image" class="col-sm-2 control-label">封面图</label>
                            <div class="col-md-3 col-sm-8">
                                <input type="text" name="banner" value="" class="form-control" id="banner" placeholder="粘贴图片地址或下方上传文件">
                                <input type="file" name="banner_image" id="banner_image">
                                <span class="help-block banner-msg">最高450px</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="video" class="col-sm-2 control-label">视频</label>
                            <div class="col-sm-9">
                                <input type="text" value="" name="video" class="form-control" id="video" placeholder="视频">
                                <span class="help-block video-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="content" class="col-sm-2 control-label">内容</label>
                            <div class="col-sm-9">
                                <textarea name="content" id="content"></textarea>
                                <span class="help-block content-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="price" class="col-sm-2 control-label">价格</label>
                            <div class="col-sm-5">
                                <input type="text" name="price" value="" class="form-control" id="price" placeholder="价格" >
                                <span class="help-block price-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="rank" class="col-sm-2 control-label">排序</label>
                            <div class="col-sm-5">
                                <input type="text" name="rank" value="1" class="form-control" id="rank" placeholder="排序" >
                                <span class="help-block rank-msg"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="rank" class="col-sm-2 control-label">发布</label>
                            <div class="col-sm-1">
                                <select class="form-control" name="published">
                                    <option value="1">是</option>
                                    <option value="0" selected>否</option>
                                </select>
                            </div>
                            <label for="rank" class="col-sm-1 control-label">推荐</label>
                            <div class="col-sm-1">
                                <select class="form-control" name="recommend">
                                    <option value="1">是</option>
                                    <option value="0" selected>否</option>
                                </select>
                            </div>
                            <label for="rank" class="col-sm-1 control-label">显示价格</label>
                            <div class="col-sm-1">
                                <select class="form-control" name="show_price">
                                    <option value="1">是</option>
                                    <option value="0" selected>否</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button id="save" type="submit" class="btn btn-info">保存</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script type="text/javascript" src="{{ asset('plugins/ckeditor/ckeditor.js','frontend') }}"></script>
    <script type="text/javascript" src="{{ asset('plugins/jquery.form.js','frontend') }}"></script>
    <script type="text/javascript">
        CKEDITOR.replace('content');
        $(document).ready(function(){
            $('#save').on('click',function () {
                var _index = layer.load(1, {
                    shade: [0.1,'#fff'] //0.1透明度的白色背景
                });
                $('#case-form').ajaxForm({
                    type:'POST',
                    statusCode:{
                        204:function (res) {
                            layer.close(_index)
                            var index=layer.msg('添加成功');
                            setTimeout("location.href='{{ path('b_case_list') }}'",1000)
                        },
                        400:function (res) {
                            layer.close(_index)
                            var msg = res.responseJSON.message
                            if((typeof msg)==='string'){
                                layer.msg(msg)
                            }else {
                                for(var i in msg){
                                    layer.msg(msg[i])
                                    return
                                }
                            }
                        },
                        401:function () {
                            layer.msg('会话已过期，需要重登录！')
                        },
                        500:function () {
                            layer.close(_index)
                            layer.msg('服务器出错了')
                        }
                    }
                })
            });
        });
        var _seconds = {};
        {% for item in categorys %}{% if item.seconds %}
        _seconds[{{ item.id }}] =[{"id":0,"text":"请选择"},{% for second in item.seconds %}{ "id":{{ second.id }}, "text":"{{ second.name }}" },{% endfor %}];
        {% else %}
        _seconds[{{ item.id }}] = [{"id":0,"text":"请选择"}];
        {% endif %}{% endfor %}
        function setSecond(pv)
        {

            $('#second_id').empty();

            if(pv=='0') return;
            if(typeof(_seconds[pv])=='undefined') return;

            for(var k in _seconds[pv]){
                $('#second_id').append('<option value="'+_seconds[pv][k].id+'">'+_seconds[pv][k].text+'</option>')
            }


        }
    </script>
{% endblock %}
