{% extends '@Layouts/backendFrame.html.twig' %}
{% block page_header %}
    <h1>案例管理</h1>
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-10">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">案例列表</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <table class="table table-striped">
                        <tbody><tr>
                            <th style="width: 10px">#</th>
                            <th>标题</th>
                            <th>缩略图</th>
                            <th>分类名称</th>
                            <th>排序</th>
                            <th style="width: 200px; text-align: center">操作</th>
                        </tr>
                        {% for item in cases %}
                            <tr>
                                <td>{{ item.id }}.</td>
                                <td>{{ item.title }}</td>
                                <td>{% if item.thumbnail %}<img class="iner" src="{{ parameter('img_prefix') }}{{ item.thumbnail }}">{% endif %}</td>
                                <td>{{ item.category.name }}</td>
                                <td>{{ item.rank }}</td>
                                <td>
                                    <a href="{{ path('b_case_edit',{id: item.id}) }}" class="btn bg-olive btn-sm">编辑</a>
                                    <button data-url="{{ path('bapi_delete_case',{id: item.id}) }}" type="button" class="btn bg-maroon btn-sm del-x">删除</button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody></table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                  {{ knp_pagination_render(cases) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block css %}
<style>.iner{height: 40px;}</style>
{% endblock %}
{% block js %}
    <script>
        $(document).ready(function(){
            $('.del-x').on('click',function(){
                var url = $(this).attr('data-url')
                layer.confirm('确认移除？', {
                    btn: ['确认','取消']
                }, function(index) {
                    layer.close(index)
                    var _index = layer.load(1, {
                        shade: [0.1,'#fff'] //0.1透明度的白色背景
                    });
                    $.ajax({
                        url    : url,
                        method : 'DELETE',
                        statusCode:{
                            204:function (res) {
                                layer.close(_index)
                                var _index=layer.msg('删除成功');
                                setTimeout("location.reload()",1000)
                            },
                            400:function (res) {
                                layer.close(_index)
                                var msg = res.responseJSON.message
                                if((typeof msg)==='string'){
                                    layer.msg(msg)
                                }else {

                                    for(var i in msg){
                                        layer.msg(msg[i])
                                        return
                                    }
                                }
                            },
                            401:function () {
                                layer.msg('会话已过期，需要重登录！')
                            },
                            500:function () {
                                layer.close(_index)
                                layer.msg('服务器出错了')
                            }
                        }
                    });
                })
            })
        })
    </script>
{% endblock %}