{% extends '@Layouts/frontendFrame.html.twig' %}
{% from '@Frontend/partial/toolbar.html.twig' import toolbar %}
{% block title %}
  <title>{{ case.title }} - 网站建设|北京网站制作|北京网站设计</title>
  <meta name="keywords" content="">
  <meta name="description" content="">
{% endblock %}
{% block content %}
  {% include '@Frontend/partial/inner_header.html.twig' %}
  {{ toolbar(categorys,1,case) }}
  <section class="caseshow content active" style="width: 1905px;">
    <div id="Banner" class="banner" style="background:url({{ parameter('img_prefix') }}{{ case.banner }});"></div>
    <div class="caption">项目介绍</div>
    <div class="words">
      <h1>[ {{ case.title }} ]</h1>
      <span class="rel">网站设计<u>•</u><a href="{{ path('case_category',{category: case.category.route}) }}" target="_blank" title="{{ case.category.name }}行业网站设计">{{ case.category.name }}行业</a></span>
      {{ case.introduce|raw }}
      <dl class="tags">
        <dt>案例标签<span class="glyphicon glyphicon-tag"></span></dt>
        {% for tag in case.tags %}
        <dd><a href="{{ path('tag_list',{tagId: tag.id}) }}" target="_blank">{{ tag.name }}</a></dd>
        {% endfor %}
      </dl>
    </div>
    <div class="caption">设计欣赏</div>
    <div class="demo" style="width: 1000px;">
      {{ case.content|raw }}
    </div>
  </section>
{% endblock %}

{% block css %}
  <link href="{{ asset('static/css/base.css','frontend') }}" rel="stylesheet">
{% endblock %}
{% block js %}
  <script src="{{ asset('static/js/inner.js','frontend') }}"></script>
{% endblock %}