{% extends '@Layouts/frontendFrame.html.twig' %}
{% from '@Frontend/Macros/aside.html.twig' import aside %}
{% from '@Frontend/partial/toolbar.html.twig' import toolbar %}
{% block title %}
    <title>{{ job.title }} - 提供基于文化创意与数字科技的整体解决方案 021-52855980</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
{% endblock %}
{% block content %}
    {% include '@Frontend/partial/header.html.twig' %}
    <section role="main" class="subpage current active">
        <div class="main-box">
            {{ toolbar([],3,'') }}
            <div class="information-table">
                <div class="information-row">
                    <div class="information-descript info1">
                        <div class="information-title">
                            <h1>{{ job.title }}</h1>
                            <em>
                                <u>阅读</u>
                                <i class="fa fa-eye"></i>
                                {{ job.flow }}
                                &nbsp;·&nbsp;
                                <u>发布日期</u>
                                <i class="fa fa-clock-o"></i>
                                {{ job.createdAt.format('Y-m-d H:i:s') }}
                                {#&nbsp;·&nbsp;
                                <i class="fa fa-smile-o"></i>
                                普川#}
                            </em>
                        </div>
                        <div class="information-content">
                            {{ job.content|raw }}
                        </div>
                    </div>
                    {{ aside(recommends) }}
                </div>
            </div>


            <button type="button" class="btn btn-icon btn-primary btn-squared met-scroll-top hide">
                <i class="icon wb-chevron-up" aria-hidden="true"></i>
            </button>
        </div>
    </section>
{% endblock %}

