        $('.sidebar-icon').on('click',function(){
            if($(this).hasClass('active')){
                $(this).removeClass('active');
                $('section[role=main],header[role=heading]').removeClass('active');
                $.cookie('head_active','current',{path:'/'});
            }else{
                $(this).addClass('active');
