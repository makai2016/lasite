{% macro toolbar(categorys,type,info) %}
  {% if type ==1 %}{% set _croute = 'article_category' %}{% elseif type==2 %}{% set _croute = 'case_category' %}{% endif %}
  {% set _params = app.request.get('_route_params') %}
  {% set _route = app.request.attributes.get('_route') %}

  <div class="sidebar-header {% if _route != 'case_info' %}active{% endif %}">
    <div class="sidebar-icon active">
      <i class="fa fa-arrow-left"></i>
      <i class="fa fa-th-list"></i>
    </div>
    <div class="sidebar-nav">
      <ol>全部</ol>
      <ul>
        <li class="{% if _route in ['article_list','case_list'] %}active{% endif %}">
          <a href="{% if type==1 %}{{ path('article_list') }}{% elseif type==2 %}{{ path('case_list') }}{% endif %}" title="全部">全部</a>
        </li>
        {% for item in categorys %}
        <li class="{% if (_route==_croute and _params.category==item.route) or (info and info.categoryId==item.id) %}active{% endif %}">
          <a href="{{ path(_croute,{category: item.route}) }}" title="{{ item.name }}">
              {{ item.name }}
          </a>
        </li>
        {% endfor %}

      </ul>
    </div>
  </div>
{% endmacro %}

